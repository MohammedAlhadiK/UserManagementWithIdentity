@model UserRolesViewModel
<div class="card">
    <form method="post" asp-action="ManageUserRoles" asp-controller="Users" enctype="multipart/form-data">
        <div class="card-header">
            @Model.UserName
        </div>
        <div class="card-body">
            @* <h5 class="card-title">Special title treatment</h5>
            <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>*@
             
            @for (int i = 0; i < Model.Roles.Count(); i++)
            {
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <div class="input-group-text">
                            <input type="checkbox" asp-for="@Model.Roles[i].isSelected"  >
                            @* @if (role.isSelected)
                        {
                        }
                        else
                        {

                        <input type="checkbox" asp-for="@role.isSelected">
                        }*@
                            <input type="hidden" asp-for="@Model.Roles[i].RoleName">
                        </div>
                    </div>
                    &nbsp;
                    <span>@Model.Roles[i].RoleName</span>
                    <input type="hidden" asp-for="@Model.UserId">
                    <input type="hidden" asp-for="@Model.UserName">

                    @*<input type="text" class="form-control" aria-label="Text input with checkbox">*@
                </div>
            }
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="card-footer">

            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-action="Index" asp-controller="Users" class="btn btn-secondary">Cancel</a>

        </div>
    </form>

</div>