@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}
<form id="profile-form" method="post" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-6">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating ">
                <input asp-for="Username" class="form-control" disabled />
                <label asp-for="Username" class="form-label"></label>
            </div>
            <div class="form-floating mt-2">
                <input asp-for="Input.FirstName" class="form-control" />
                <label asp-for="Input.FirstName" class="form-label"></label>
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>
            <div class="form-floating mt-2">
                <input asp-for="Input.LastName" class="form-control" />
                <label asp-for="Input.LastName" class="form-label"></label>
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>
            <div class="form-floating mt-2">
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <label asp-for="Input.PhoneNumber" class="form-label"></label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary mt-2">Save</button>
        </div>
        <div class="col-md-4">
            <div class="form-group" >

                @if (Model.Input.ProfilePicture.Length >10)
                {

                    <img onclick="document.getElementById('uploadImage').click()" alt="profile" id="profilePicture" class="profilePicture" src="data:image/*;base64,@Convert.ToBase64String(Model.Input.ProfilePicture)" />
                }
                else
                {
                    <img onclick="document.getElementById('uploadImage').click()" alt="profile" id="profilePicture" class="profilePicture" src="~/images/User-Profile-PNG.png" />

                }
                <div class="custom-file mt-2" >
                    <input type="file"
                                                      id="uploadImage"
                           accept="image/*"
                           asp-for="Input.ProfilePicture"
                           class="custom-file-input"
                           onchange="document.getElementById('profilePicture').src = window.URL.createObjectURL(this.files[0]);document.getElementById('profilePicture1').src = window.URL.createObjectURL(this.files[0]);" />
                    <span asp-validation-for="Input.ProfilePicture" class="text-danger"></span>

                </div>

            </div>
        </div>
    </div>
</form>
<partial name="_StatusMessage" for="StatusMessage" />

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
